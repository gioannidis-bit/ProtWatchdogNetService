@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="el" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] · HIT Watchdog</title>

    <!-- Bootstrap 5.3 & Icons (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Font -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --hit-gradient: linear-gradient(135deg, #6ea8fe 0%, #a370f7 50%, #e685b5 100%);
        }

        body {
            font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji", sans-serif;
        }

        .glass {
            background: rgba(255,255,255,0.06);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255,255,255,0.08);
        }

        .brand-gradient {
            background: var(--hit-gradient);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .card-kpi {
            border: 0;
            border-radius: 16px;
        }

        .table thead th {
            position: sticky;
            top: 0;
            z-index: 1;
        }

        .hover-row:hover {
            background-color: rgba(255,255,255,0.04) !important;
        }

        .btn-ghost {
            background: transparent;
            border: 1px solid rgba(255,255,255,0.15);
        }

        .hit-footer {
            border-top: 1px solid rgba(255,255,255,0.08);
        }
    </style>

    @RenderSection("Head", required: false)
</head>
<body>
    <header class="border-bottom border-0 py-3">
        <nav class="container d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-activity fs-3 text-primary"></i>
                <a class="navbar-brand fw-bold fs-4 m-0 text-decoration-none brand-gradient" asp-area="" asp-page="/Index">
                    HIT Watchdog
                </a>
                <span class="badge text-bg-info-subtle border border-info-subtle">Service Monitor</span>
            </div>

            <div class="d-flex align-items-center gap-2">
                <button id="themeToggle" type="button" class="btn btn-ghost btn-sm">
                    <i class="bi bi-brightness-high"></i> <span class="ms-1">Theme</span>
                </button>
                <a class="btn btn-primary btn-sm" asp-area="" asp-page="/Index">
                    <i class="bi bi-arrow-clockwise"></i> Ανανεώση
                </a>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="hit-footer py-4">
        <div class="container d-flex justify-content-between small text-secondary">
            <span>&copy; @DateTime.Now.Year · HIT Watchdog</span>
            <span>Built with Bootstrap · <a class="link-secondary" href="#" onclick="window.scrollTo({top:0,behavior:'smooth'})">επάνω</a></span>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script>
        // Dark/Light toggle (persists)
        (function () {
            const html = document.documentElement;
            const key = "hit-theme";
            const saved = localStorage.getItem(key);
            if (saved) html.setAttribute("data-bs-theme", saved);

            document.getElementById("themeToggle")?.addEventListener("click", () => {
                const cur = html.getAttribute("data-bs-theme") || "dark";
                const next = (cur === "dark") ? "light" : "dark";
                html.setAttribute("data-bs-theme", next);
                localStorage.setItem(key, next);
            });
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
