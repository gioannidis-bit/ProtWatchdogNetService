@page
@model ProtWatchdog.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

@section Head {
    <style>
        .card-kpi {
            border: 0;
            border-radius: 16px;
            background: rgba(255,255,255,0.06);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255,255,255,0.08);
        }

        .kpi-value {
            font-size: clamp(1.6rem, 2.5vw, 2rem);
            font-weight: 700;
        }

        .kpi-label {
            font-size: .9rem;
            opacity: .85;
        }

        .mono {
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        }

        .table thead th {
            position: sticky;
            top: 0;
            z-index: 1;
            background: rgba(0,0,0,.15);
        }

        .hover-row:hover {
            background-color: rgba(255,255,255,0.04) !important;
        }

        .form-hint {
            font-size: .8rem;
            opacity: .8;
        }

        .card-header .btn-collapse {
            border: 1px solid rgba(255,255,255,0.15);
        }

        .table-responsive {
            max-height: 58vh;
        }
    </style>
}

<!-- KPIs -->
<div class="row g-3">
    <div class="col-12 col-lg-4">
        <div class="card card-kpi">
            <div class="card-body">
                <div class="kpi-label text-secondary mb-1">Σύνολο διεργασιών</div>
                <div class="kpi-value" id="processCount">—</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-8">
        <div class="card card-kpi h-100">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div class="text-secondary">Πίνακας ελέγχου διεργασιών</div>
                <button id="btnRefresh" type="button" class="btn btn-outline-primary btn-sm" onclick="refresh()">
                    <i class="bi bi-arrow-clockwise"></i> Ανανέωση
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Add / Edit Form (IDs όπως τα περιμένει το app.js) -->
<div class="card mt-4">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
            <i class="bi bi-plus-square"></i>
            <span class="fw-semibold">Καταχώριση νέας διεργασίας</span>
        </div>
        <button class="btn btn-sm btn-collapse" type="button" data-bs-toggle="collapse" data-bs-target="#addFormWrap" aria-expanded="true">
            <i class="bi bi-chevron-up"></i>
        </button>
    </div>
    <div id="addFormWrap" class="collapse show">
        <div class="card-body">
            <form id="addForm" class="row g-3">
                <div class="col-md-4">
                    <label for="name" class="form-label">Όνομα *</label>
                    <input id="name" type="text" class="form-control" placeholder="π.χ. SqlRelayServer" required>
                </div>
                <div class="col-md-5">
                    <label for="exe" class="form-label">Executable Path *</label>
                    <input id="exe" type="text" class="form-control mono" placeholder="C:\Apps\SqlRelay\SqlRelayServer.exe" required>
                    <div class="form-text form-hint">Χρησιμοποίησε πλήρες path.</div>
                </div>
                <div class="col-md-3">
                    <label for="params" class="form-label">Arguments</label>
                    <input id="params" type="text" class="form-control mono" placeholder="--port 1515 --env Prod">
                </div>

                <div class="col-md-3">
                    <label for="delay" class="form-label">Restart Delay (sec)</label>
                    <input id="delay" type="number" class="form-control" min="0" value="5">
                </div>
                <div class="col-md-3">
                    <label for="maxRestarts" class="form-label">Max Restart Attempts</label>
                    <input id="maxRestarts" type="number" class="form-control" min="0" value="10">
                </div>
                <div class="col-md-3">
                    <label for="timeWindow" class="form-label">Restart Window (min)</label>
                    <input id="timeWindow" type="number" class="form-control" min="1" value="5">
                </div>

                <div class="col-md-3 d-flex align-items-end">
                    <div class="form-check">
                        <input id="enableHealth" class="form-check-input" type="checkbox">
                        <label class="form-check-label" for="enableHealth">Enable Health Check</label>
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="healthInterval" class="form-label">Health Interval (sec)</label>
                    <input id="healthInterval" type="number" class="form-control" min="5" value="30">
                </div>
                <div class="col-md-3">
                    <label for="unhealthyThreshold" class="form-label">Unhealthy Threshold (sec)</label>
                    <input id="unhealthyThreshold" type="number" class="form-control" min="10" value="60">
                </div>

                <div class="col-md-3">
                    <label for="maxMemory" class="form-label">Max RAM (MB)</label>
                    <input id="maxMemory" type="number" step="0.1" class="form-control" value="0">
                </div>
                <div class="col-md-3">
                    <label for="maxCpu" class="form-label">Max CPU (%)</label>
                    <input id="maxCpu" type="number" step="0.1" class="form-control" value="0">
                </div>
                <div class="col-md-3">
                    <label for="minCpu" class="form-label">Min CPU (%)</label>
                    <input id="minCpu" type="number" step="0.1" class="form-control" value="0">
                </div>

                <div class="col-12 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Αποθήκευση
                    </button>
                    <button type="reset" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Καθαρισμός
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Πίνακας (IDs/στήλες όπως τα περιμένει το app.js) -->
<div class="card mt-4">
    <div class="card-header d-flex align-items-center gap-2">
        <i class="bi bi-list-check"></i>
        <span class="fw-semibold">Διεργασίες</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table id="table" class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Όνομα</th>
                        <th>PID</th>
                        <th>Path</th>
                        <th>Args</th>
                        <th>Delay</th>
                        <th>Last Start</th>
                        <th>Restarts</th>
                        <th>Recent/Window</th>
                        <th>ExitCode</th>
                        <th>Auto</th>
                        <th>Circuit</th>
                        <th>Health</th>
                        <th class="text-end">CPU %</th>
                        <th class="text-end">RAM MB</th>
                        <th>Ενέργειες</th>
                    </tr>
                </thead>
                <tbody></tbody> <!-- Το app.js γεμίζει εδώ -->
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Μικρό UX: εναλλαγή εικονιδίου στο κουμπί collapse
        document.addEventListener('shown.bs.collapse', e => {
            if (e.target.id === 'addFormWrap') e.target.previousElementSibling.querySelector('i').className = 'bi bi-chevron-up';
        });
        document.addEventListener('hidden.bs.collapse', e => {
            if (e.target.id === 'addFormWrap') e.target.previousElementSibling.querySelector('i').className = 'bi bi-chevron-down';
        });
    </script>

    <!-- Το app.js σου -->
    <script src="/app.js"></script>
}
